.voting-wrapper
  position fixed
  background #fff
  z-index 1000
  bottom 0
  right 5%
  width 40%
  max-width 600px
  border 1px solid #ddd
  transition 0.2s

  .voting-header
    display flex
    .voting-title
      flex 1
      background-color #46d3c3
      text-align center
      padding 4px 0 6px 0

  .voting-content
    display flex
    height 100%